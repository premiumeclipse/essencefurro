# Dashboard Environment Variables
NODE_ENV=development

# Database connection
DATABASE_URL=postgresql://username:password@localhost:5432/essence_bot

# Session secret
SESSION_SECRET=your_session_secret_here

# Discord OAuth2 credentials (for dashboard login)
DISCORD_CLIENT_ID=your_client_id
DISCORD_CLIENT_SECRET=your_client_secret
DISCORD_REDIRECT_URI=http://localhost:5000/api/auth/callback

# Bot connection
DASHBOARD_SECRET=essence_dashboard_secret

# Discord Bot Environment Variables
# Copy these to .env.bot for the bot
DISCORD_TOKEN=your_bot_token_here
DASHBOARD_URL=ws://localhost:5000/ws